
<h2 style="margin: 0px auto; text-align: center">Image format</h2>
<div id="format-container"></div>
<h2 style="margin: 0px auto; text-align: center">The number of photos added in a defined period of time</h2>
<div id="upload-dates"></div>

<script type="text/javascript">
  Morris.Donut({
    element: 'format-container',
    data: <%= raw @formats.to_json %>
  });
  Morris.Line({
    element: 'upload-dates',
    data: <%= raw @dates.to_json %>,
    xkey: 'y',
    ykeys: ['x'],
    labels: ['Upload count', 'Series B']
  });
</script>
